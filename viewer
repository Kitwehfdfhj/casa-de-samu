<header>المهام اليومية</header>

<div class="wrap">
  <label>اختر اسمك</label>
  <select id="viewerSelect"></select>

  <div id="tasksArea" style="margin-top:14px"></div>
</div>

<script type="module">
import { initializeApp } from "https://www.gstatic.com/firebasejs/9.22.1/firebase-app.js";
import { getDatabase, ref, onValue } from "https://www.gstatic.com/firebasejs/9.22.1/firebase-database.js";

const firebaseConfig = {
  apiKey: "AIzaSyCiMs-fSIJi1Jwi6_BSddsmCZ5GXatdcEA",
  authDomain: "casa-7bc46.firebaseapp.com",
  databaseURL: "https://casa-7bc46-default-rtdb.firebaseio.com",
  projectId: "casa-7bc46",
  storageBucket: "casa-7bc46.firebasestorage.app",
  messagingSenderId: "464116381670",
  appId: "1:464116381670:web:03d98f8aeea6769d4b8827",
  measurementId: "G-G7XZBBQH10"
};

const app = initializeApp(firebaseConfig);
const db = getDatabase(app);

const viewerSelect = document.getElementById("viewerSelect");
const tasksArea = document.getElementById("tasksArea");

// تحميل الأشخاص
onValue(ref(db, "people"), (snapshot) => {
  viewerSelect.innerHTML = "";
  
  snapshot.forEach((child) => {
    const id = child.key;
    const data = child.val();
    
    const opt = document.createElement("option");
    opt.value = id;
    opt.textContent = data.name;
    viewerSelect.appendChild(opt);
  });

  loadTasks(viewerSelect.value);
});

viewerSelect.onchange = () => loadTasks(viewerSelect.value);

// تحميل المهام
function loadTasks(personId) {
  onValue(ref(db, "tasks"), (snapshot) => {
    tasksArea.innerHTML = "";

    let found = false;

    snapshot.forEach((child) => {
      const task = child.val();

      if (task.assigneeId === personId) {
        found = true;
        const div = document.createElement("div");
        div.className = "task";
        div.innerHTML = `
          <strong>${task.title}</strong>
          <div class="date">تاريخ: ${task.date || 'غير محدد'}</div>
        `;
        tasksArea.appendChild(div);
      }
    });

    if (!found) {
      tasksArea.innerHTML = "<div class='no-task'>لا توجد مهام</div>";
    }
  });
}
</script>

